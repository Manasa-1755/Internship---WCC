{
  "manifest_version": 3,
  "name": "sample",
  "version": "1.3",
  "description": "Record your active Google Meet tab with video + audio + mic",
  "permissions": [
    "tabCapture",
    "tabs",
    "downloads"
  ],
  "optional_permissions" : ["microphone"],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
