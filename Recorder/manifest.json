{
  "manifest_version": 3,
  "name": "Meeting Recorder",
  "version": "1.0",
  "description": "Record Google Meet and Microsoft Teams meetings with video + audio",
  "permissions": [
    "tabs",
    "tabCapture", 
    "downloads",
    "storage",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.teams.microsoft.com/*",
    "https://*.teams.live.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["platforms/gmeet/content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.teams.microsoft.com/*",
        "https://*.teams.live.com/*"
      ],
      "js": ["platforms/teams/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "platforms/gmeet/recorder.html", 
        "platforms/teams/recorder.html",
        "platforms/gmeet/recorder.js",
        "platforms/teams/recorder.js",
        "platforms/gmeet/popup-gmeet.js",
        "platforms/teams/popup-teams.js",
        "platforms/gmeet/popup-gmeet.html",
        "platforms/teams/popup-teams.html",
        "popup.css"
      ],
      "matches": [
        "https://meet.google.com/*",
        "https://*.teams.microsoft.com/*", 
        "https://*.teams.live.com/*"
      ]
    }
  ]
}