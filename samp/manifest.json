{
  "manifest_version": 3,
  "name": "sample with auto record part",
  "version": "1.4",
  "description": "Record your active Google Meet tab and download the video automatically.",
  "permissions": [
    "tabCapture",
    "downloads",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "optional_permissions": [
    "microphone"
  ]
}
